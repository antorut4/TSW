<html>
    <head>
    <title>Prodotto</title> 
    <link rel="stylesheet" type="text/css" href="css/singoloProdotto.css">
    <script src="https://code.iconify.design/1/1.0.7/iconify.min.js"></script>
    <script src="JavaScript/script.js"></script>
    </head>

    <body>
        <div class="container">
            <div class="search-bar">
                <input type="text" placeholder="Cerca...">
                <iconify-icon class="iconify-icon" data-icon="material-symbols:search"></iconify-icon>
            </div>
            <div class="icon-bar">
                <iconify-icon class="iconify-icon" data-icon="mdi:user"></iconify-icon>
                <iconify-icon class="iconify-icon" data-icon="ic:round-star"></iconify-icon>
                <iconify-icon class="iconify-icon" data-icon="mingcute:shopping-bag-2-line"></iconify-icon>
            </div>              
            <div class="top">
                <div class="logo">
                    <img src="assets/logo3.png" alt="Logo">
                </div>
                <div class="curve">
                </div>
            </div>
            


            <!-- Items -->
            <div class="bottom">
				<div class="container">
				<div class="products">
					<h2>Prodotti</h2>
					<ul>
					<li>
						<a href="#">
						<img src="assets/item-03.jpg" alt="Nome prodotto">
						<h3>Nome prodotto</h3>
						<p>"25.00€l"</p>
						</a>
                        <div class="quantity">
                            <label for="quantity">Quantità:</label>
                            <input type="number" id="quantity" name="quantity" min="1" value="1">
                        </div>
                        <div class="taglia">
                            <label for="taglia">Taglia</label>
                            <select>
                                <option value="XS">XS</option>
                                <option value="S">S</option>
                                <option value="M">M</option>
                                <option value="L">L</option>
                                <option value="XL">XL</option>
                                <option value="XXL">XXL</option>
                            </select>
                        </div>
                        <button class="add-to-cart">Aggiungi al carrello</button>
				        <button class="add-to-favorites">Aggiungi ai preferiti</button>
					</li>
					</ul>
				</div>
				</div>
			</div>
        </div>
              
              
    </body>
</html>
